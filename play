#!/bin/bash
# play â€” open audio/video files in a browser-based player with speed control
# Usage: play <file> [-s speed] [-p port]

SOURCE="$0"
while [ -L "$SOURCE" ]; do
  DIR="$(cd "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  [[ "$SOURCE" != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd "$(dirname "$SOURCE")" && pwd)"
exec bun run "$SCRIPT_DIR/server.ts" "$@"
